@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Producto>
@if (Model != null)
{
    
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12" style="padding-bottom:1rem;">
                    <div class="card h-100" style="box-shadow: 0 5px 5px 0 gray;">
                    <img src="@proyecto.Imagen" class="card-img-top" alt="img proyecto">
                        <div class="card-body">
                        <h5 class="card-title" style="font-weight: bold;">@proyecto.Descripcion</h5>
                            <p class="card-text">@proyecto.Nombre</p>
                            <p class="card-text" style="font-weight: bold;">S/. @proyecto.Precio</p>
                        </div>

                    </div>
                </div>

            }
        </div>

    
}
